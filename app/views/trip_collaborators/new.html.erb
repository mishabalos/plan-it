<div class="container mx-auto px-4 py-8 max-w-2xl">
  <div class="py-2">
    <%= link_to trip_path(@trip), class: "px-4 py-2 text-gray-600 rounded-lg transition-colors duration-200 flex items-center justify-left gap-1" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
      </svg>
      <p class="text-gray-600">Back to "<%= @trip.title %>"</p>
    <% end %>
  </div>
  <div class="bg-white rounded-xl shadow-md p-8">
    <h1 class="text-2xl font-bold mb-4 text-[#264653]">Add Collaborator</h1>
    <%= form_with(url: trip_collaborators_path(@trip), local: true, class: "space-y-4") do |f| %>
      <div class="field">
        <%= f.label :email, class: "text-sm font-medium" %>
        <%= f.email_field :email, class: "flex h-10 w-full rounded-md border" %>
      </div>
      <div class="field">
        <%= f.label :role, class: "text-sm font-medium" %>
        <%= f.select :role, TripCollaborator::ROLES, {}, class: "capitalize flex h-10 w-full rounded-md border" %>
      </div>
      <%= f.button type: "submit", class: "px-4 py-2 bg-[#006D77] text-white rounded-lg hover:bg-[#264653] transition-colors duration-200 flex items-center justify-center gap-1 w-full cursor-pointer" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path d="M8 9a3 3 0 100-6 3 3 0 000 6zM8 11a6 6 0 016 6H2a6 6 0 016-6zM16 7a1 1 0 10-2 0v1h-1a1 1 0 100 2h1v1a1 1 0 102 0v-1h1a1 1 0 100-2h-1V7z"/>
        </svg>
        Add Collaborator
      <% end %>
    <% end %>
  </div>
</div>