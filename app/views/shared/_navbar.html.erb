<nav class="bg-white shadow">
  <div class="container mx-auto px-4">
    <div class="flex justify-between h-16">
      <div class="flex items-center">
        <%= link_to root_path, class: "flex items-center space-x-2" do %>
          <span class="text-xl font-bold text-[#006D77]">PLAN-IT</span>
        <% end %>
        <% if user_signed_in? %>
          <div class="hidden md:flex items-center space-x-4 ml-10">
            <%= link_to 'My Trips', trips_path, class: "text-gray-700 hover:text-gray-900" %>
            <%= link_to 'New Trip', new_trip_path, class: "text-gray-700 hover:text-gray-900" %>
          </div>
        <% end %>
      </div>
      <div class="flex items-center space-x-4">
        <% if user_signed_in? %>
          <div class="flex items-center space-x-4">
            <span class="text-gray-700"><%= current_user.first_name %></span>
            <%= button_to destroy_user_session_path, method: :delete, class: "text-gray-700 hover:text-gray-900", form_class: "inline" do %>
              Sign Out
            <% end %>
          </div>
        <% else %>
          <%= link_to new_user_session_path, 
      class: "px-4 py-2 rounded-lg border-2 border-[#006D77] text-[#006D77] hover:bg-[#006D77] hover:text-white transition-all duration-200" do %>
            Sign In
          <% end %>
          <%= link_to new_user_registration_path, 
      class: "ml-4 px-4 py-2 rounded-lg bg-[#006D77] text-white hover:bg-[#264653] hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200 shadow-md" do %>
            Sign Up
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
