<% flash.each do |name, msg| %>
  <div data-controller="flash" class="mb-4 p-4 rounded-lg flex items-center justify-between <%= flash_background_color(name) %>">
    <div class="flex items-center gap-2">
      <%= flash_icon(name) %>
      <p class="<%= flash_text_color(name) %>"><%= msg %></p>
    </div>
    <button data-action="click->flash#dismiss" class="<%= flash_button_color(name) %> hover:opacity-75 transition-colors duration-200 cursor-pointer">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
      </svg>
    </button>
  </div>
<% end %>