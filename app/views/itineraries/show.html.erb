<div class="container mx-auto px-4">
  <div class="py-2">
    <%= link_to trip_path(@trip), class: "px-4 py-2 text-gray-600 rounded-lg transition-colors duration-200 flex items-center justify-left gap-1" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
      </svg>
      <p class="text-gray-600">Back to "<%= @trip.title %>"</p>
    <% end %>
  </div>
  <h1 class="text-2xl font-bold mb-4">Day <%= (@itinerary.date - @trip.start_date).to_i + 1 %></h1>
  <div class="bg-white shadow rounded p-6">
    <p class="text-lg mb-4"><%= @itinerary.date.strftime("%B %d, %Y") %></p>
    <div class="mb-6">
      <%= link_to 'Add Activity', new_trip_itinerary_activity_path(@trip, @itinerary), class: 'btn-primary' %>
    </div>
    <div class="space-y-4">
      <%= render @activities %>
    </div>
  </div>
</div>