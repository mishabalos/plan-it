<div class="relative flex flex-col items-center justify-center min-h-screen bg-gradient-to-br from-[#83C5BE]/10 to-[#FFDDD2]/20">
  <!-- Decorative background elements -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute top-20 left-20 w-64 h-64 bg-[#006D77]/5 rounded-full blur-3xl"></div>
    <div class="absolute bottom-20 right-20 w-64 h-64 bg-[#E29578]/5 rounded-full blur-3xl"></div>
  </div>
  <div class="relative text-center max-w-4xl mx-auto px-6 py-16 rounded-2xl bg-white/80 backdrop-blur-sm shadow-xl">
    <!-- Main heading with gradient text -->
    <h1 class="text-5xl sm:text-6xl font-bold mb-6 bg-gradient-to-r from-[#006D77] to-[#264653] text-transparent bg-clip-text transform transition-transform duration-700 hover:scale-[1.02]">
      Plan Your Perfect Trip
    </h1>
    <!-- Subtitle with improved typography -->
    <p class="text-xl text-[#264653]/80 mb-12 max-w-2xl mx-auto leading-relaxed">
      Organize your travel itineraries, manage destinations, and plan activities with ease.
    </p>
    <!-- Button container with improved spacing and animations -->
    <div class="space-x-6">
      <%= link_to new_user_registration_path, 
          class: 'inline-block px-8 py-4 bg-[#006D77] text-white text-lg font-semibold rounded-lg shadow-lg hover:bg-[#264653] transform hover:-translate-y-0.5 transition-all duration-300 hover:shadow-xl' do %>
        Get Started
        <span class="ml-2 inline-block transform transition-transform group-hover:translate-x-1">â†’</span>
      <% end %>
      <%= link_to about_path, 
          class: 'inline-block px-8 py-4 bg-white text-[#006D77] text-lg font-semibold rounded-lg border-2 border-[#006D77] hover:bg-[#006D77] hover:text-white transform hover:-translate-y-0.5 transition-all duration-300' do %>
        Learn More
      <% end %>
    </div>
    <!-- Feature highlights -->
    <div class="mt-16 grid grid-cols-1 md:grid-cols-3 gap-8 text-left">
      <div class="p-6 rounded-xl bg-white/80 shadow-md hover:shadow-lg transition-shadow duration-300">
        <div class="text-[#E29578] mb-3">
          <%= inline_svg_tag 'icons/map.svg', class: 'w-8 h-8' %>
        </div>
        <h3 class="text-[#264653] font-semibold text-lg mb-2">Smart Itineraries</h3>
        <p class="text-[#264653]/70">Effortlessly organize your daily travel plans with our intuitive tools.</p>
      </div>
      <div class="p-6 rounded-xl bg-white/80 shadow-md hover:shadow-lg transition-shadow duration-300">
        <div class="text-[#006D77] mb-3">
          <%= inline_svg_tag 'icons/budget.svg', class: 'w-8 h-8' %>
        </div>
        <h3 class="text-[#264653] font-semibold text-lg mb-2">Budget Tracking</h3>
        <p class="text-[#264653]/70">Keep your travel expenses organized and stay within your budget effortlessly.</p>
      </div>
      <div class="p-6 rounded-xl bg-white/80 shadow-md hover:shadow-lg transition-shadow duration-300">
        <div class="text-[#83C5BE] mb-3">
          <%= inline_svg_tag 'icons/share.svg', class: 'w-8 h-8' %>
        </div>
        <h3 class="text-[#264653] font-semibold text-lg mb-2">Easy Sharing</h3>
        <p class="text-[#264653]/70">Share your travel plans with friends and family in just one click.</p>
      </div>
    </div>
  </div>
</div>