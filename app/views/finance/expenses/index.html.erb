<div class="container mx-auto px-4">
  <div class="flex justify-between items-center mb-4">
    <h1 class="text-2xl font-bold">Expenses</h1>
    <%= link_to 'Add Expense', new_trip_budget_expense_path(@trip), class: 'btn-primary' %>
  </div>
  <div class="space-y-4">
    <% @expenses.each do |expense| %>
      <div class="border rounded p-4 shadow">
        <div class="flex justify-between">
          <h3 class="font-semibold"><%= link_to trip_budget_expense_path(@trip, @budget, expense) do %><%= expense.name %><% end %></h3>
          <span class="text-lg">$<%= expense.amount %></span>
        </div>
        <p class="text-sm text-gray-600">Paid by: <%= expense.user.full_name %></p>
        <p class="text-sm text-gray-600">Category: <%= expense.category %></p>
      </div>
    <% end %>
  </div>
</div>