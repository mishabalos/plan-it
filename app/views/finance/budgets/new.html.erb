<div class="container mx-auto px-4 max-w-2xl">
  <h1 class="text-2xl font-bold mb-4">Set Budget</h1>
  <%= form_with(model: @budget, url: trip_budgets_path(@trip), local: true, class: "space-y-4") do |f| %>
    <div class="field">
      <%= f.label :amount, class: "text-sm font-medium" %>
      <%= f.number_field :amount, step: '0.01', class: "flex h-10 w-full rounded-md border", name: "budget[amount]" %>
    </div>
    <%= f.submit "Set Budget", class: "w-full btn-primary" %>
  <% end %>
</div>