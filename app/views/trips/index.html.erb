<div class="container mx-auto px-4">
  <h1 class="text-2xl font-bold mb-4">My Trips</h1>
  <%= link_to 'New Trip', new_trip_path, class: 'btn-primary' %>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 mt-4">
    <% @trips.each do |trip| %>
      <div class="border rounded p-4 shadow">
        <h2 class="text-xl font-semibold"><%= trip.title %></h2>
        <p class="text-gray-600"><%= trip.description %></p>
        <div class="mt-2">
          <%= link_to 'View', trip_path(trip), class: 'btn-secondary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>