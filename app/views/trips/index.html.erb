<div class="container mx-auto px-4">
  <div class="flex justify-between items-center mb-4">
    <h1 class="text-2xl font-bold">My Trips</h1>
    <%= link_to 'New Trip', new_trip_path, class: 'btn-primary' %>
  </div>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    <% @trips.each do |trip| %>
      <div class="border rounded p-4 shadow">
        <div class="flex justify-between items-start mb-2">
          <h2 class="text-xl font-semibold"><%= trip.title %></h2>
          <% if trip.owner?(current_user) %>
            <span class="px-2 py-1 text-xs bg-blue-100 text-blue-800 rounded">Owner</span>
          <% else %>
            <span class="px-2 py-1 text-xs bg-gray-100 text-gray-800 rounded">Shared</span>
          <% end %>
        </div>
        <p class="text-gray-600"><%= trip.description %></p>
        <div class="mt-2 space-x-2">
          <%= link_to 'View', trip_path(trip), class: 'btn-secondary' %>
          <% if trip.can_edit?(current_user) %>
            <%= link_to 'Edit', edit_trip_path(trip), class: 'btn-secondary' %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>