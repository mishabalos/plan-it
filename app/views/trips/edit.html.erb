<div class="container mx-auto px-4 py-8 max-w-2xl">
  <div class="bg-white rounded-xl shadow-md p-8">
    <!-- Header Section -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-[#264653] mb-2">Edit Trip</h1>
      <p class="text-gray-600">Update your trip details and preferences</p>
    </div>
    <!-- Breadcrumb Navigation -->
    <div class="flex items-center space-x-2 text-sm mb-8 text-gray-600">
      <%= link_to 'My Trips', trips_path, class: 'hover:text-[#006D77]' %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
      </svg>
      <span class="text-[#006D77] font-medium">Edit Trip</span>
    </div>
    <!-- Form Section -->
    <div class="bg-[#83C5BE]/5 rounded-lg p-6 mb-8">
      <%= form_with(model: @trip, local: true) do |f| %>
        <!-- Title Field -->
        <div class="mb-6">
          <%= f.label :title, class: "block text-sm font-medium text-[#264653] mb-2" %>
          <%= f.text_field :title, 
              class: "w-full px-4 py-2 rounded-lg border border-gray-300 focus:border-[#006D77] focus:ring focus:ring-[#006D77]/20 focus:outline-none transition-colors duration-200",
              placeholder: "Enter trip title" %>
        </div>
        <!-- Description Field -->
        <div class="mb-6">
          <%= f.label :description, class: "block text-sm font-medium text-[#264653] mb-2" %>
          <%= f.text_area :description, 
              rows: 4,
              class: "w-full px-4 py-2 rounded-lg border border-gray-300 focus:border-[#006D77] focus:ring focus:ring-[#006D77]/20 focus:outline-none transition-colors duration-200",
              placeholder: "Describe your trip" %>
        </div>
        <!-- Date Range Fields -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
          <div>
            <%= f.label :start_date, class: "block text-sm font-medium text-[#264653] mb-2" %>
            <%= f.date_field :start_date, 
                class: "w-full px-4 py-2 rounded-lg border border-gray-300 focus:border-[#006D77] focus:ring focus:ring-[#006D77]/20 focus:outline-none transition-colors duration-200" %>
          </div>
          <div>
            <%= f.label :end_date, class: "block text-sm font-medium text-[#264653] mb-2" %>
            <%= f.date_field :end_date, 
                class: "w-full px-4 py-2 rounded-lg border border-gray-300 focus:border-[#006D77] focus:ring focus:ring-[#006D77]/20 focus:outline-none transition-colors duration-200" %>
          </div>
        </div>
        <!-- Action Buttons -->
        <div class="flex items-center justify-end space-x-4">
          <%= link_to 'Cancel', trip_path(@trip), 
              class: "px-6 py-2 border-2 border-[#006D77] text-[#006D77] rounded-lg hover:bg-[#006D77] hover:text-white transition-colors duration-200" %>
          <%= f.submit "Update Trip", 
              class: "px-6 py-2 bg-[#006D77] text-white rounded-lg hover:bg-[#264653] transition-colors duration-200 cursor-pointer" %>
        </div>
      <% end %>
    </div>
    <!-- Quick Tips -->
    <div class="bg-[#E29578]/10 rounded-lg p-4">
      <h3 class="text-sm font-medium text-[#264653] mb-2">Quick Tips:</h3>
      <ul class="text-sm text-gray-600 space-y-2">
        <li class="flex items-center space-x-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-[#E29578]" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
          <span>Add a descriptive title to easily identify your trip</span>
        </li>
        <li class="flex items-center space-x-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-[#E29578]" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
          <span>Include key details in the description for better planning</span>
        </li>
      </ul>
    </div>
  </div>
</div>