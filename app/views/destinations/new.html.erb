<div class="container mx-auto px-4 py-8 max-w-2xl">
  <div class="bg-white rounded-xl shadow-md p-8">
    <!-- Header Section -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-[#264653] mb-2">New Destination</h1>
      <p class="text-gray-600">Add a new stop to your trip "<%= @trip.title %>"</p>
    </div>
    <!-- Breadcrumb -->
    <div class="flex items-center space-x-2 text-sm mb-8 text-gray-600">
      <%= link_to 'My Trips', trips_path, class: 'hover:text-[#006D77]' %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
      </svg>
      <%= link_to @trip.title, trip_path(@trip), class: 'hover:text-[#006D77]' %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
      </svg>
      <span class="text-[#006D77] font-medium">New Destination</span>
    </div>
    <!-- Form Section -->
    <%= form_with(model: [@trip, @destination], local: true, class: "space-y-6") do |f| %>
      <div class="bg-[#83C5BE]/5 p-6 rounded-lg">
        <!-- Name Field -->
        <div class="mb-6">
          <%= f.label :name, class: "block text-sm font-medium text-[#264653] mb-2" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
              </svg>
            </div>
            <%= f.text_field :name, 
                class: "w-full pl-10 px-4 py-2 rounded-lg border border-gray-300 focus:border-[#006D77] focus:ring focus:ring-[#006D77]/20 focus:outline-none transition-colors duration-200",
                placeholder: "Enter destination name" %>
          </div>
        </div>
        <!-- City and Country Fields -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= f.label :city, class: "block text-sm font-medium text-[#264653] mb-2" %>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"/>
                </svg>
              </div>
              <%= f.text_field :city, 
                  class: "w-full pl-10 px-4 py-2 rounded-lg border border-gray-300 focus:border-[#006D77] focus:ring focus:ring-[#006D77]/20 focus:outline-none transition-colors duration-200",
                  placeholder: "Enter city name" %>
            </div>
          </div>
          <div>
            <%= f.label :country, class: "block text-sm font-medium text-[#264653] mb-2" %>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M3 6a3 3 0 013-3h10a1 1 0 01.8 1.6L14.25 8l2.55 3.4A1 1 0 0116 13H6a1 1 0 00-1 1v3a1 1 0 11-2 0V6z" clip-rule="evenodd"/>
                </svg>
              </div>
              <%= f.text_field :country, 
                  class: "w-full pl-10 px-4 py-2 rounded-lg border border-gray-300 focus:border-[#006D77] focus:ring focus:ring-[#006D77]/20 focus:outline-none transition-colors duration-200",
                  placeholder: "Enter country name" %>
            </div>
          </div>
        </div>
      </div>
      <!-- Action Buttons -->
      <div class="flex items-center justify-end space-x-4">
        <%= link_to 'Cancel', trip_path(@trip), 
            class: "px-6 py-2 border-2 border-[#006D77] text-[#006D77] rounded-lg hover:bg-[#006D77] hover:text-white transition-colors duration-200" %>
        <%= f.submit 'Create Destination', 
            class: "px-6 py-2 bg-[#006D77] text-white rounded-lg hover:bg-[#264653] transition-colors duration-200 cursor-pointer" %>
      </div>
    <% end %>
    <!-- Tips Section -->
    <div class="mt-8 bg-[#E29578]/10 rounded-lg p-4">
      <h3 class="text-sm font-medium text-[#264653] mb-2">Quick Tips:</h3>
      <ul class="text-sm text-gray-600 space-y-2">
        <li class="flex items-center space-x-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-[#E29578]" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
          <span>Be specific with the destination name for better organization</span>
        </li>
        <li class="flex items-center space-x-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-[#E29578]" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
          <span>Include both city and country for clearer planning</span>
        </li>
      </ul>
    </div>
  </div>
</div>